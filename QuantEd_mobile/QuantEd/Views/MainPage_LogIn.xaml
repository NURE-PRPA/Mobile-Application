<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuantEd.Views.MainPage_LogIn"
             Title="">
    <Grid >
    <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="5*" />
           
     </Grid.RowDefinitions>
         <BoxView Color="#3D6D79"/>
        <Grid Grid.Row="0"
              Style="{StaticResource headerStyle}">
        
         <ImageButton
                IsEnabled="False"
                Source="logo_light.png"
                HeightRequest="45"
               />

        <Button
            IsEnabled="False"
            Grid.Column="1"
            Style="{StaticResource iconLabeltyle}"
         />
         
            <Button
            Grid.Column="2"
            Text="Explore"
            Style="{StaticResource buttonStyle}"
            HorizontalOptions="EndAndExpand"
             Clicked="ToCourses"
         />
             <Button
            Grid.Column="3"
            Text="Account"
            Style="{StaticResource buttonStyle}"
            HorizontalOptions="CenterAndExpand"
            Clicked="ViewAccount"
         />
           </Grid>
         <BoxView Grid.Row="1" Color="#DBF1F5"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="5*"  />
                 <RowDefinition Height="*" />
             </Grid.RowDefinitions>
             
            <Image
                
                Source="logo_dark.png"
                SemanticProperties.Description="Label"
                HeightRequest="85"
                Margin="0,30,0,0"
               />
            <Label
                Grid.Row="1"
            Text="Welcome to QuantEd!"
            TextColor="#3D6D79"
            SemanticProperties.HeadingLevel="Level2"
            FontAttributes="Bold"
            FontSize="27"
            FontFamily="Jost"
      
            HorizontalOptions="Center"
            VerticalOptions="Center"
         />
            <Label
                Grid.Row="2"
            Text="Unlock thousands courses that will help you achieve new heights!"
            TextColor="#3D6D79"
            SemanticProperties.HeadingLevel="Level2"
            FontAttributes="Bold"
            FontSize="15"
            FontFamily="Jost"
            Margin="10,0,10,25"
            
            HorizontalTextAlignment="Center"
            HorizontalOptions="Center"
            VerticalOptions="Center"
         />
            <Button
                Style="{StaticResource mainButtonStyle}"
                Grid.Row="3"
                Text="Explore courses"
                TextColor="#FBE7D2"
                FontSize="25"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                WidthRequest="230"
                Clicked="ToCourses"
            />
            <Grid Grid.Row="4" RowSpacing="2" ColumnSpacing="2" Margin="10,30,10,10" >
                <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
             </Grid.RowDefinitions>
             <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                     <ColumnDefinition Width="*"/>
                     <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ImageButton
                    Grid.Column="0"
                    Source="astronomy.png"
                    Aspect="AspectFill"
                    />
                <Label
                 Grid.Column="0"
                 BackgroundColor="Black"
                 Opacity="0.4"
                 />
                <Label
                 Grid.Column="0"
                Text="Astronomy"
                TextColor="White"
                FontSize="20"
                FontAttributes="Bold"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                 />
                 
                <ImageButton
                    Grid.Column="1"
                    Grid.Row="0"
                    Source="geography.png"
                   Aspect="AspectFill"
                    />
                <Label
                 Grid.Column="1"
                 BackgroundColor="Black"
                 Opacity="0.4"
                 />
                <Label
                 Grid.Column="1"
                Text="Geography"
                TextColor="White"
                FontSize="20"
                FontAttributes="Bold"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                    />
                <ImageButton
                    Grid.Column="2"
                    Grid.Row="0"
                    Source="computer.png"
                    Aspect="AspectFill"
                    />
                <Label
                 Grid.Column="2"
                 BackgroundColor="Black"
                 Opacity="0.4"
                 />
                <Label
                 Grid.Column="2"
                Text="Computer Science"
                TextColor="White"
                FontSize="20"
                FontAttributes="Bold"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                 />
                <ImageButton
                    Grid.Column="0"
                    Grid.Row="1"
                    Source="chemistry.png"
                    Aspect="AspectFill"
                    />
                 <Label
                 Grid.Column="0"
                 Grid.Row="1"
                 BackgroundColor="Black"
                 Opacity="0.4"
                    />
                <Label
                 Grid.Column="0"
                 Grid.Row="1"
                Text="Chemistry"
                TextColor="White"
                FontSize="20"
                FontAttributes="Bold"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                    />
                <ImageButton
                    Grid.Column="1"
                    Grid.Row="1"
                    Source="calculus.png"
                    Aspect="AspectFill"
                    />
                <Label
                 Grid.Column="1"
                 Grid.Row="1"
                 BackgroundColor="Black"
                 Opacity="0.4"
                    />
                <Label
                 Grid.Column="1"
                 Grid.Row="1"
                Text="Calculus"
                TextColor="White"
                FontSize="20"
                FontAttributes="Bold"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                    />
                <ImageButton
                    Grid.Column="2"
                    Grid.Row="1"
                    Source="english.png"
                    Aspect="AspectFill"
                    />
                <Label
                 Grid.Column="2"
                 Grid.Row="1"
                 BackgroundColor="Black"
                 Opacity="0.4"
                    />
                <Label
                 Grid.Column="2"
                 Grid.Row="1"
                Text="English"
                TextColor="White"
                FontSize="20"
                FontAttributes="Bold"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                    />
            </Grid>
        </Grid>
         
    </Grid>
</ContentPage>
